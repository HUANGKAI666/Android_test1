<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:vol="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_custom_volum_control_bar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jingbin.customview.activity.CustomVolumControlBarActivity">

    <com.example.jingbin.customview.view.CustomVolumControlBar
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        vol:vBg="@drawable/vol_02"
        vol:vCircleWidth="8dp"
        vol:vDotCount="10"
        vol:vFirstColor="@android:color/black"
        vol:vSecondColor="@color/colorAccent"
        vol:vSplitSize="20" />

    <com.example.jingbin.customview.view.CustomVolumControlBar
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="15dp"
        vol:vBg="@drawable/vol_03"
        vol:vCircleWidth="12dp"
        vol:vDotCount="10"
        vol:vFirstColor="@android:color/black"
        vol:vSecondColor="@color/colorPrimary"
        vol:vSplitSize="15" />

    <com.example.jingbin.customview.view.CustomVolumControlBar
        android:id="@+id/customVolumControlBar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        vol:vBg="@drawable/vol_01"
        vol:vCircleWidth="15dp"
        vol:vDotCount="11"
        vol:vFirstColor="@android:color/black"
        vol:vSecondColor="@android:color/white"
        vol:vSplitSize="15" />

</LinearLayout>
